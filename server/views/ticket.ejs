}
body {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;

::-webkit-scrollbar {
  width: 5px;
}

/* Track */
::-webkit-scrollbar-track {
  background: #f1f1f1; 
}
 
/* Handle */
::-webkit-scrollbar-thumb {
  background: #66a1f3; 
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #66a1f3; 
  width: 10px;
}
}
.main {
	width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #66a1f3;	
}
.app {
	width:50%;
	min-width: 375px;
	height: 900px;
	border: 1px solid #efefef;
	position: fixed;
	overflow-y: scroll;
  background-color: white;
  border-radius: 10px;
margin-left: auto;
margin-right: auto;

}

/* ========== Home ========== */
.screen-home__location,
